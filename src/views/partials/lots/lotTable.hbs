<div class="page-content p-5" id="content">
	<div class="card-title">
		<div class="row">
			<div class="col-sm-10">
				<h4>LOTES</h4>
			</div>
			<div class="col-sm-2" style="text-align: end;">
				<button type="button" class="btn color-button" data-bs-toggle="modal" data-bs-target="#formUser">
					Nuevo
				</button>
				{{> lots/lotModal }} 
			</div>
		</div>
	</div>
	<div class="separator"></div>
	{{#each lots as |lot|}}
		<div class="card">
			<h5 class="card-header color-button">Lote {{lot.number}}  
				<a href="/lots/{{lot._id}}/edit" class="text-white"><i class="fa fa-edit mr-3 fa-fw"></i></a>
				<a href="/lots/{{lot._id}}/delete" class="text-white"><i class="fa fa-trash-o mr-3 fa-fw"></i></a>
			</h5>
			<div class="card-body">				
				<p class="card-title">Cantidad: {{lot.amount}}</p>
				{{#ifCond lot.comment '==' ''}}
					<p class="card-text">Comentario: Ninguno</p>
				{{else}}				
					<p class="card-text">Comentario: {{lot.comment}}</p>	
				{{/ifCond}}			
			</div>
			<div class="card-footer text-muted">
				{{lot.date}}
			</div>
		</div>
		<br/>
	{{/each}}	
</div>